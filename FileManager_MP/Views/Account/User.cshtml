@model FileManager_MP.Models.FileDirectory

@{
    ViewBag.Title = "File Manager";
    Layout = "~/Views/_LayoutPage1.cshtml";
    <link href="~/styles/StyleSheet.css" rel="stylesheet" />
}

<h2 class="txt-center">File Manager</h2>
<form method="post" action="/Account/User">
        <div class="container">
            <label><b>Path</b></label>
            <input type="text" placeholder="C:\123" name="Path" required>
            <button type="submit" name="open" class="createButton">Open</button>
        </div>
        <div class="div-center">
            <div>
                <ul>
                    @if (Model?.Files != null)
                    {
                        foreach (var file in Model?.Files)
                        {
                            <li>@file</li>
                        }
                    }
                    @if (Model?.Directories != null)
                    {
                        foreach (var directory in Model?.Directories)
                        {
                            <li>@directory</li>
                        }
                    }
                    @if (Model != null)
                    {
                        @Model.Message
                    }
                </ul>
            </div>
        </div>
    <div class="container" style="background-color:#f1f1f1">
        <button type="button" class="cancelbtn" act onclick="location.href = '@Url.Action("Login", "Account")'">Cancel</button>
        <span class="psw">Forgot</span>
    </div>
    </form>


